<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/loginFragment">

<fragment
    android:name="com.streamefy.component.ui.homefragment.HomeFragment"
    android:id="@+id/homefragment"
    android:label="homefragment"
    tools:layout="@layout/fragment_home"
 />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.streamefy.component.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_otpFragment"
            app:destination="@id/otpFragment" />
    </fragment>
    <fragment
        android:id="@+id/otpFragment"
        android:name="com.streamefy.component.ui.otp.OtpFragment"
        android:label="OtpFragment" >
        <action
            android:id="@+id/action_otpFragment_to_pinAuthenticationFragment"
            app:destination="@id/pinAuthenticationFragment" />
    </fragment>
    <fragment
        android:id="@+id/pinAuthenticationFragment"
        android:name="com.streamefy.component.ui.pin_authentication.PinAuthenticationFragment"
        android:label="PinAuthenticationFragment" >
        <action
            android:id="@+id/action_pinAuthenticationFragment_to_homefragment"
            app:destination="@id/homefragment" />
    </fragment>

</navigation>